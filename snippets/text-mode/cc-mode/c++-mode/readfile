#name : read file into vector<char>
# --
std::vector<char> ${1:v};
if (FILE* fp = fopen(${"filename"}, "r"))
{
    char buf[1024];
    while (size_t len = fread(buf, 1, sizeof(buf), fp))
    {
        $1.insert($1.end(), buf, buf + len);
    }
    fclose(fp);
}